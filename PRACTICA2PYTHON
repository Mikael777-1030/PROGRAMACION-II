import math
class Linea:
    def __init__(self, p1, p2):
        self.p1 = p1
        self.p2 = p2

    def __str__(self):
        return f"Línea desde {self.p1} hasta {self.p2}"

    def dibujaLinea(self):
        print(f"Dibujando línea desde {self.p1} hasta {self.p2}")


class Circulo:
    def __init__(self, centro, radio):
        self.centro = centro
        self.radio = radio

    def __str__(self):
        return f"Círculo con centro en {self.centro} y radio {self.radio:.2f}"

    def dibujaCirculo(self):
        print(f"Dibujando círculo con centro en {self.centro} y radio {self.radio:.2f}")


p1 = Punto(0, 3)
p2 = Punto(4, 5)

linea = Linea(p1, p2)
circulo = Circulo(p1, 5.0)

print(linea)
linea.dibujaLinea()

print(circulo)
circulo.dibujaCirculo()

